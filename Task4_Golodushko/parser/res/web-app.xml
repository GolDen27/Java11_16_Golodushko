<?xml version="1.0" encoding="UTF-8" ?>
<wa:web-app xmlns:wa="http://www.epam.tc.com/web-app"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.epam.tc.com/web-app webschema.xsd"
         wa:id="WebApp_9" wa:version="a24">
    <wa:display-name>Servlet 2.4 application</wa:display-name>
    <wa:welcome-file-list>
        <wa:welcome-file>index.html</wa:welcome-file>
        <wa:welcome-file>index.htm</wa:welcome-file>
        <wa:welcome-file>index.jsp</wa:welcome-file>
        <wa:welcome-file>default.html</wa:welcome-file>
        <wa:welcome-file>default.htm</wa:welcome-file>
        <wa:welcome-file>default.jsp</wa:welcome-file>
    </wa:welcome-file-list>
    <wa:filter>
        <wa:filter-name>ServletMappedDoFilter_Filter</wa:filter-name>
        <wa:filter-class>tests.Filter.DoFilter_Filter</wa:filter-class>
        <wa:init-param>
            <wa:param-name>attribute</wa:param-name>
            <wa:param-value>tests.Filter.DoFilter_Filter.SERVLET_MAPPED</wa:param-value>
        </wa:init-param>
    </wa:filter>
    <wa:filter-mapping>
        <wa:filter-name>ServletMappedDoFilter_Filter</wa:filter-name>
        <wa:url-pattern>/DoFilterTest</wa:url-pattern>
        <wa:dispatcher>REQUEST</wa:dispatcher>
    </wa:filter-mapping>
    <wa:filter-mapping>
        <wa:filter-name>ServletMappedDoFilter_Filter</wa:filter-name>
        <wa:url-pattern>/IncludedServlet</wa:url-pattern>
        <wa:dispatcher>INCLUDE</wa:dispatcher>
    </wa:filter-mapping>
    <wa:filter-mapping>
        <wa:filter-name>ServletMappedDoFilter_Filter</wa:filter-name>
        <wa:url-pattern>/ForwardedServlet</wa:url-pattern>
        <wa:dispatcher>FORWARD</wa:dispatcher>
    </wa:filter-mapping>
    <wa:listener>
        <wa:listener-class>tests.ContextListener</wa:listener-class>
    </wa:listener>
    <wa:listener>
        <wa:listener-class>tests.ServletRequestListener.RequestListener</wa:listener-class>
    </wa:listener>
    <wa:servlet>
        <wa:servlet-name>welcome</wa:servlet-name>
        <wa:servlet-class>WelcomeServlet</wa:servlet-class>
    </wa:servlet>
    <wa:servlet>
        <wa:servlet-name>ServletErrorPage</wa:servlet-name>
        <wa:servlet-class>tests.Error.ServletErrorPage</wa:servlet-class>
    </wa:servlet>
    <wa:servlet>
        <wa:servlet-name>IncludedServlet</wa:servlet-name>
        <wa:servlet-class>tests.Filter.IncludedServlet</wa:servlet-class>
    </wa:servlet>
    <wa:servlet>
        <wa:servlet-name>ForwardedServlet</wa:servlet-name>
        <wa:servlet-class>tests.Filter.ForwardedServlet</wa:servlet-class>
    </wa:servlet>
    <wa:servlet-mapping>
        <wa:servlet-name>welcome</wa:servlet-name>
        <wa:url-pattern>/hello.welcome</wa:url-pattern>
    </wa:servlet-mapping>
    <wa:servlet-mapping>
        <wa:servlet-name>ServletErrorPage</wa:servlet-name>
        <wa:url-pattern>/ServletErrorPage</wa:url-pattern>
    </wa:servlet-mapping>
    <wa:servlet-mapping>
        <wa:servlet-name>IncludedServlet</wa:servlet-name>
        <wa:url-pattern>/IncludedServlet</wa:url-pattern>
    </wa:servlet-mapping>
    <wa:servlet-mapping>
        <wa:servlet-name>ForwardedServlet</wa:servlet-name>
        <wa:url-pattern>/ForwardedServlet</wa:url-pattern>
    </wa:servlet-mapping>
    <wa:error-page>
        <wa:exception-type>java.lang.ArrayIndexOutOfBoundsException</wa:exception-type>
        <wa:location>/ServletErrorPage</wa:location>
    </wa:error-page>
    <wa:error-page>
        <wa:error-code>404</wa:error-code>
        <wa:location>/error404.html</wa:location>
    </wa:error-page>
</wa:web-app>